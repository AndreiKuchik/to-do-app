{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:testing-library/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "testing-library"],
  "rules": {
    "linebreak-style": 0,
    "testing-library/no-node-access": [
      "error",
      { "allowContainerFirstChild": true }
    ]
  }
}
